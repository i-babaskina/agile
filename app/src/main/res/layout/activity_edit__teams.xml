<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.babaskina.alias.activities.Edit_Teams">

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teams:"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="50dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/teamNameEditText"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="30dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="bottom"
        android:clickable="true"
        android:editable="true"
        android:singleLine="true"
        android:hint="Enter Team name"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/roundbutton"
        android:text="Go!"
        android:textSize="20dp"
        android:id="@+id/button6"
        android:onClick="onClickBackToGame"
        android:singleLine="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/teamsListView"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teamNameEditText"
        android:layout_above="@+id/button6" />

</RelativeLayout>
