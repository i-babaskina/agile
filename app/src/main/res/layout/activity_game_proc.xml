<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.briznichenko.aliasDemo.GameProc"
    android:id="@+id/proc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team:"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:id="@+id/textViewTeam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valera"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:id="@+id/gameProcTeamName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Polimorphism"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="40dp"
        android:id="@+id/gameWordCurrent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton8"
        android:layout_toStartOf="@+id/imageButton8" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton6"
        android:clickable="true"
        android:background="@drawable/yes"
        android:onClick="onClickApprove"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewTeam"
        android:layout_alignEnd="@+id/textViewTeam" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/no"
        android:clickable="true"
        android:onClick="onClickDecline"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton8"
        android:layout_toStartOf="@+id/imageButton8" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton8"
        android:background="@drawable/drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickProcToMain"
        android:visibility="invisible" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/imageButton8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="30dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:background="@drawable/unknown"
        android:clickable="true"
        android:onClick="onClickDecline"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressBar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_below="@+id/textView2" />

</RelativeLayout>
