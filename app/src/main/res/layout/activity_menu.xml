<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.babaskina.alias.activities.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alias"
        android:id="@+id/AliasText"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="92dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Play"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="true"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:clickable="true"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tutorial"
        android:id="@+id/textView6"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:clickable="true"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dictionaries"
        android:id="@+id/textView5"
        android:textColor="#FFFFFF"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:clickable="true"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/AliasText"
        android:layout_alignStart="@+id/AliasText" />

</RelativeLayout>
