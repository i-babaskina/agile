<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.briznichenko.aliasDemo.TurnStat"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="false">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/roundbutton"
        android:text="Вперед!"
        android:id="@+id/button7"
        android:textSize="20dp"
        android:onClick="onClickStartRound"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Текущая команда"
        android:id="@+id/currentTeam"
        android:layout_above="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Следующими играют:"
        android:id="@+id/textView28"
        android:layout_above="@+id/currentTeam"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Раунд 1. Игра 1"
        android:id="@+id/currentTurn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/listView3"
        android:layout_above="@+id/currentTurn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
